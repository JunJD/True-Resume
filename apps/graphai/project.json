{
  "name": "graphai",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/graphai/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/graphai",
        "main": "apps/graphai/src/agent/graph.ts",
        "tsConfig": "apps/graphai/tsconfig.json",
        "assets": [
          "apps/graphai/langgraph.json",
          "apps/graphai/LICENSE",
          "apps/graphai/README.md"
        ]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx @langchain/langgraph-cli dev --port 2024",
        "cwd": "apps/graphai"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=\\.test\\.ts$ --testPathIgnorePatterns=\\.int\\.test\\.ts$",
        "cwd": "apps/graphai"
      }
    },
    "test:int": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=\\.int\\.test\\.ts$",
        "cwd": "apps/graphai"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/graphai/**/*.ts"],
        "eslintConfig": "apps/graphai/.eslintrc.cjs"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write .",
        "cwd": "apps/graphai"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check .",
        "cwd": "apps/graphai"
      }
    }
  },
  "tags": ["ai", "langgraph"]
}

